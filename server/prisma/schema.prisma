// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Category {
  id        String   @id
  name      String   @unique
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  types     Type[]
}

model Type {
  id         String    @id
  name       String    @unique
  createdAt  DateTime  @default(now())
  isActive   Boolean   @default(true)
  category   Category? @relation(fields: [categoryId], references: [id])
  categoryId String
  Item       Item[]
}

model Item {
  id               String   @id
  name             String   @unique
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  isActive         Boolean  @default(true)
  ttPrice          Decimal  @default(0) @db.Decimal(10, 5)
  decay            Decimal  @default(0) @db.Decimal(10, 5)
  source           String?
  foundOn          String?
  type             Type?    @relation(fields: [typeId], references: [id])
  typeId           String
  entropediaItemId Int?
  entropediaImgId  Int?
}
