{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base","plugin:import", "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "import",
        "prettier"
    ],
    "settings": {
        "import/resolver": "node"
    },
    "rules": {
        "prettier/prettier": ["error",{
            "trailingComma": "es5",
            "tabWidth": 4,
            "semi": false,
            "singleQuote": true,
            "printWidth": 100
          }, {
            "usePrettierrc": false
          }]
    }
}
